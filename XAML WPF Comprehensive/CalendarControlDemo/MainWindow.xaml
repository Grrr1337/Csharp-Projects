<Window x:Class="CalendarControlDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarControlDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="320">
    <StackPanel>
        <!-- Note: With the help of the ViewBox the Calendar stretches up to the entire window -->

        <!-- DisplayMode="Year" -->
        <Viewbox Stretch="Uniform">
            <Calendar x:Name="myCalendar"
                      SelectedDate="01.01.2020"
                     
                      SelectedDatesChanged="myCalendar_SelectedDatesChanged"
                      Language="bg-BG"
                      >
                
            </Calendar>
        </Viewbox>
        <TextBlock x:Name="myTextBlock">
            
        </TextBlock>
    </StackPanel>
</Window>
