<Window x:Class="CatYearsProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatYearsProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="640">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 15 0 0">
            <TextBlock
                Text="How old is your cat? (years)"
                FontSize="18"
                Margin="15,0,0,0"
                />
            <TextBox x:Name="InputCatAge" Width="120"
                     Margin="5,0,0,0"
                     TextAlignment="Center"
                     FontSize="16">
                
            </TextBox>
        </StackPanel>
        <TextBlock Name="ResultTextBlock"
                   Text="Your cat is"
                   FontSize="18"
                   Margin="15,0,0,0"
                   >
        </TextBlock>
        <Image x:Name="imageControl"
               Height="380"
               Source="/Images/kitten1.jpg"
                Stretch="Uniform"
               Margin="0 20 0 20"
               />


    </StackPanel>
</Window>
