<Window x:Class="Balloon_Popping_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Balloon_Popping_Game"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Height="600" Width="450"
        >
    <Canvas x:Name="canvas" Focusable="True" Background="Gray">
        <Label
            FontSize="20"
            Name="lblScore"
            Content="Score: 0"
            FontWeight="ExtraBold"
            Canvas.Left="10"
            Foreground="White"/>
        <Label
            FontSize="20"
            Name="lblMiss"
            Content="Missed: 0"
            FontWeight="ExtraBold"
            Canvas.Left="10"
            Canvas.Top="35"
            Foreground="White" />


    </Canvas>
</Window>
